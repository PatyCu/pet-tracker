{
  "cli": {
    "version": ">= 15.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      }
    },
    "detox-ios": {
      "extends": "development",
      "ios": {
        "simulator": true,
        "buildConfiguration": "Debug"
      },
      "env": {
        "DETOX_CONFIGURATION": "ios.sim.debug"
      }
    },
    "detox-android": {
      "extends": "development",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      },
      "env": {
        "DETOX_CONFIGURATION": "android.emu.debug"
      }
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {}
  }
}
