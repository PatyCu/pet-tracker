{
  "name": "pet-tracker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:mobile\" \"pnpm dev:api\"",
    "dev:mobile": "pnpm --filter @pet-tracker/mobile start",
    "dev:api": "pnpm --filter @pet-tracker/api dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "format": "pnpm -r format",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
